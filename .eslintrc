{
  "extends": [
    "eslint:recommended"
  ],
  
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "commonjs": true
  },

  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "indent": ["error", 2],
    "no-console": "warn",
    "jsx-quotes": ["error", "prefer-double"]
  },

  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  }
}
